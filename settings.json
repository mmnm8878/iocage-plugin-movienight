{
    "servicerestart":"service movienight restart",
    "serviceget": "/usr/local/movienight/MovieNight",
    "serviceset": "/usr/local/movienight/MovieNight",
    "options": {
        "adduser": {
            "type": "add",
            "name": "Add User",
            "description": "Add new movienight user",
            "requiredargs": {
                "username": {
                    "type": "string",
                    "description": "MovieNight Client Username"
                },
                "password": {
                    "type": "password",
                    "description": "MovieNight Client Password"
                },
                "fullname": {
                    "type": "string",
                    "description": "MovieNight Client Full Name"
                }
            },
            "optionalargs": {
                "adminuser": { 
                    "type": "bool",
                    "description": "Can this user administrate movienight?"
                }
            }
        },
        "port": {
            "type": "int",
            "name": "MovieNight Core Port",
            "description": "Port for incoming connections",
            "range": "1024-32000",
            "default": "8089",
            "requirerestart": true
        },
        "sslmode": {
            "type": "bool",
            "name": "SSL Only",
            "description": "Only accept SSL connections",
            "default": false,
            "requirerestart": true
            
        },  
        "ssloption": {
            "type": "combo",
            "name": "SSL Options",
            "description": "SSL Connection Options",
            "requirerestart": true,
            "default": "tlsallow",
            "options": {
                    "tlsrequire": "Require TLS",
                    "tlsallow": "Allow TLS",
                    "tlsdisable": "Disable TLS"
            }
        },
        "deluser": {
            "type": "delete",
            "name": "Delete User",
            "description": "Remove a quasselcore user"
        }

    }
}